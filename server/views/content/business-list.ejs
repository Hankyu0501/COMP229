 <div class="row justify-content-md-center">
          <div class="col">


            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/business-list/add" class="btn btn-primary btn-lg"><i class="fas fa-plus-circle"></i> Add New Business</a>
            <% } %>
            <hr>

            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Company</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Number</th>
                   <% if(typeof displayName == 'string' && displayName) { %>               
                  <th></th>
                  <th></th>
                  <% } %>
                </tr>
              </thead>
              <tbody>

                <% for(let count=0; count < business.length; count++) { %>

                <tr>
                  <td><%= business[count].company %></td>
                  <td><%= business[count].name %></td>
                  <td><%= business[count].email %></td>
                  <td><%= business[count].number %></td>

                  <% if(typeof displayName == 'string' && displayName) { %>  
                    <td>
                      <a href="/business-list/edit/<%= business[count]._id %>" class="btn btn-primary btn-sm">
                          <i class="fas fa-user-"></i> Edit</a>
                    </td>
                    <td>
                        <a href="/business-list/delete/<%= business[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-minus-circle"></i> Delete</a>
                    </td>

                   <% } %>
                </tr>
                
              <% } %>

              </tbody>
            </table>

          </div>
        </div>