<div class="row justify-content-md-center">
    <div class="col-8">
        
        <form method="POST">
            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" class="form-control" id="Company" aria-describedby="company" 
              name="company" placeholder="Enter Business Company"
              required>
            </div>

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="name" 
                name="name" placeholder="Enter Name"
                required>
              </div>
              
              <div class="form-group">
                <label for="email">Email</label>
                <textarea class="form-control" id="email"
                name="email" placeholder="Enter Email" required
                ></textarea>
              </div>
              
              <div class="form-group">
                <label for="number">Number</label>
                <input type="text" class="form-control" id="number" aria-describedby="number" 
                name="number" placeholder="Enter Business Number"
                required>
              </div>
            
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Add Business</button>
            <a href="/business-list" class="btn btn-warning btn-lg"><i class="fas fa-backward"></i> Cancel</a>
          </form>

    </div>
</div>